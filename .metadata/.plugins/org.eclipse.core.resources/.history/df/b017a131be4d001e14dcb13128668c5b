package s17.FileHandling.FileWriting;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class App {

	public static void main(String[] args) {
		File newFile = new File("src/example.txt");
		
		//trying to open a new writer and if sucessfull then write to the file
		try(BufferedWriter writer = new BufferedWriter(new FileWriter(newFile))) {
				writer.write("Brandon");
				writer.write("Jason");
				writer.write("Paul");
				writer.write("Samantha");
				System.out.println("File write is completed");
		} catch(IOException e) {
			e.printStackTrace();
		}

	}

}

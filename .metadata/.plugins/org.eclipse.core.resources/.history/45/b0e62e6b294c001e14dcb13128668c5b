package s15.Multithreading.Synchronization.StaticSync;

//class that creates a series of opening and closing brakets
class Brakets{
	private static String threadCode;
	
	synchronized static public void generate() {
		for(int i = 0; i <= 10; i++) {
			if(i <= 5) {
				System.out.print("[");
			}
			else {
				System.out.print("]");
			}
		}
		System.out.println("Generated by thread: " + threadCode);
	}

	public Brakets(String threadCode) {
		this.threadCode = threadCode;
	}
	
	
}
public class App {
	public static void main(String[] args) {
		Brakets braket = new Brakets("Thread 1");
		Brakets braket2 = new Brakets("Thread 2");

		new Thread(new Runnable() {
			
			@Override
			public void run() {
				for(int i = 0; i <= 5; i++){
					braket.generate();
				}
				
			}
		}).start();
		new Thread(new Runnable() {
			
			@Override
			public void run() {
				for(int i = 0; i <= 5; i++){
					braket2.generate();
				}
				
			}
		}).start();
	}
}